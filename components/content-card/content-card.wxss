.content-card {
    display: flex;
    flex-direction: column;
    box-shadow: 0px -4rpx 16rpx 0px rgba(148, 163, 178, 0.05);
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 20rpx 20rpx 0px 0px;
  }
  
  .card-dot {
    width: 18rpx;
    height: 18rpx;
    border-radius: 50%;
    border: 6rpx solid #b40000;
    margin-left: 26rpx;
  }
  
  .card-top-left{
    display: flex;
    align-items: center;
  }
  
  .card-top {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    width: 750rpx;
    height: 100rpx;
    padding-right: 26rpx;
    box-sizing: border-box;
  }
  
  .content-name {
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgb(43, 43, 43);
    line-height: 20px;
    margin-left: 8px;
  }
  
  .card-bottom {
    width: 750rpx;
    box-sizing: border-box;
  }
  
  .card-padding {
    padding: 0rpx 20rpx 40rpx 20rpx;
  }
  
  .padd{
    padding-bottom: 40rpx;
  }
  