
.option-container {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row-reverse;
}
.container {
  padding-left: 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.describe {
  font-size: 28rpx;
  margin-left:10rpx;
}

.detail {
  font-size: 32rpx;
  padding: 30rpx;
}
.poetry{
  padding: 11px;
  background-color: rgba(255, 255, 255, 0.8);
}
.title {
  font-size: 40rpx;
  font-weight: 900 !important;
  text-align: center;
  margin-bottom: 10rpx;
}
.poet {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #444;
  background-color: rgba(255, 255, 255, 0.8);

}
.poet>view {
  padding: 10rpx 10rpx;
}
.poet>view.name {
  color: #b40000;
}
.poet view text {
  color: #666;
}
.poem {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  background-color: rgba(255, 255, 255, 0.8);
}
.poem text {
  line-height: 1.6;
  font-size: 35rpx;
}
.poetry-detail {
  margin-top: 11rpx;
  background-color: rgba(255, 255, 255, 0.8);

}
.segment-active{
  font-weight: 900 !important;
  font-size: 34rpx !important;
  border-width: 10rpx !important;
  color: #b40000 !important;
}
.segment-inactive{
  font-size: 32rpx !important;
  color: #1b1a1a !important;
}
.swipeable-header {
  margin: 0 auto;
  border: 0 !important;
}

.swipeable-class-inactive {
  border-width: 8rpx !important;
}

.swipeable-class-active {
  font-weight: 900 !important;
  font-size: 34rpx !important;
  border-width: 10rpx !important;
  color: #b40000 !important;
}

.inactive-class{
  font-size: 32rpx !important;
  color: #1b1a1a !important;
}
.tab-content {
  font-size: 32rpx;
  padding-left: 11px;
  padding-right: 11px;
}
.line-class {
  width: 50rpx !important;
  background-color: #B40000 !important;
}
/* pages/storehouse/storehouse.wxss */
.tag-class{
  margin: 5rpx;
}

.author{
  margin-top: 10rpx;
  background-color: rgba(255, 255, 255, 0.8);

  padding: 11px;
}
.author .name{
	font-size: 38rpx;
  font-weight: 900 !important;
  margin-bottom: 20rpx;
  color: #b40000;
}

.info{
	margin-top: 20rpx;
	font-size: 32rpx;
}
.info-content{
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 7;
  -webkit-box-orient: vertical;
}